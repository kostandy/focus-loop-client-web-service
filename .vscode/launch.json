{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run in Development Mode",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
		},
		{
			"name": "Prepare for Production Mode",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "generate"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
		},
		{
			"name": "Preview Generated Site",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "preview"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
		}
	]
}
